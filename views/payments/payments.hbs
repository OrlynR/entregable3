 <div class="row d-flex align-items-center justify-content-center mt-4 mb-4">
    <div class="col-6 mt-5" style="height: 800px">
         <div>
            <h2 class="payments-title mb-3 d-flex justify-content-center">PAYMENTS</h2> 
            <form>
                <div class="form-group">
                    <input type="email" class="form-control" id="paymentsEmail" aria-describedby="emailHelp" placeholder="Email" style="font-size: 28px">                            
                </div>
                <div class="form-group">
                    <input type="amount" class="form-control" id="paymentsAmount" placeholder="Amount" style="font-size: 28px">
                </div>
                <div class="form-group">
                    <input type="card-" class="form-control" id="card_number" placeholder="Card Number" style="font-size: 28px">
                </div>
                 <div class="form-group">
                    <input type="date" class="form-control" id="expiry_date" placeholder="MM/AA" style="font-size: 28px">
                </div>
                
                 <div class="form-group">
                    <input type="number" class="form-control" id="security_code" placeholder="CVC" style="font-size: 28px">
                </div>
                <button type="submit" class="btn btn-lg btn-block" id="paymentsBtn" style="background: #000000;color:#FFFfff; font-size:28px">Submit</button>
            </form>
        </div>  
    </div>
</div>