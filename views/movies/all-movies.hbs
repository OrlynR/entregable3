<div class="row d-flex justify-content-center" style="background-color:#01dfa5">
    <div class="card mt-2 mb-2">
        <div class="card-header text-white" style="background: #000;">
            <h3 class="d-flex justify-content-center"> MOVIES</h3>
        </div>
        <div class="card-body" style="background-color:#01dfa5">
            <div class="row" >

                {{#each movies}}
                    <div class="col-md-4">
                        <div class="card mb-2">
                            <video src="{{video}}" alt="" type="video/mp4" controls height="360"></video>
                            <div class="card-body" style="background-color: #f2f2f2">
                                <h3 class="card-title mb-2 " >{{title}}</h3>
                                <h6 class="card-subtitle text-muted mb-2" style="font-size: 18px"> Category: {{category}}</h6>
                                <h6 class="card-subtitle text-muted mb-2" style="font-size: 18px">Type: {{type}}</h6>
                                <h6 class="card-subtitle text-muted mb-2" style="font-size: 18px"> Director: {{director}}</h6>
                                <h6 class="card-subtitle text-muted mb-2" style="font-size: 18px"> Year: {{year}}</h6>
                                <h6 class="card-subtitle text-muted mb-2" style="font-size: 18px"> Time: {{time}} hours</h6>
                                <h6 class="card-subtitle text-muted mb-2" style="font-size: 18px">Languague: {{languague}}</h6>
                                <h6 class="card-subtitle text-muted mb-2" style="font-size: 18px"> Subtitle: {{subtitle}}</h6>
                                <h6 class="card-subtitle text-muted mb-2" style="font-size: 18px"> Dubbing: {{dubbing}}</h6>                       </div>
                        </div>
                    </div>    
                {{/each}}
            </div>
        </div>
   
</div>






